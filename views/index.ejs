<!DOCTYPE html>
<html lang = 'en'>
    <head>
        <meta charset="UTF-8">
        <title>To-Do-List</title>
    </head>
    <body>
        <h1>To-Do-List</h1>
        <ul>
            <% tasks.forEach(task => {%>
                <li><%= task %></li>
            <% }); %>
        </ul>

        <form action="/add" method="post">
            <input type="text" name="task" placeholder="Add a new task" required>
            <button type="submit">Add Task</button>
        </form>
    </body>
</html>
